<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#564"
    tools:context=".WeekSummary">
    <android.support.v7.widget.CardView
        android:id="@+id/garbage_card_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2DC"
        app:cardCornerRadius="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/garbage_tv_week"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week, "
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/week_summary_dates_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/garbage_tv_week"
                android:layout_below="@+id/garbage_tv_week"
                android:textSize="18sp"
                android:text="Start Date - End Date"/>
            <TextView
                android:layout_marginBottom="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/week_summary_dates_set"
                android:text="Check out last week here"
                android:textSize="14sp"
                android:onClick="LastWeekLoad"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="2dp"
        android:id="@+id/garbage_card_over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/garbage_card_date"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#2DC">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/garbage_tv_performance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Performace"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:id="@+id/garbage_ll_cal_exc"
                android:layout_below="@+id/garbage_tv_performance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Total Calories Intake"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:id="@+id/week_summary_calorie_intake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="XXX Kcal"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Total Calories Burnt"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/week_summary_calorie_burnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="XXX Kcal"/>
                    <TextView
                        android:id="@+id/week_summary_exc_cal"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="In Exercise : xx Kcal"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/garbage_tv_wt_chng"
                android:layout_below="@+id/garbage_ll_cal_exc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Weight Change"
                android:textStyle="bold|italic"
                android:textSize="20sp"/>
            <LinearLayout
                android:id="@+id/garbage_ll_wt_chng"
                android:layout_below="@+id/garbage_tv_wt_chng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Starting Weight : "
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/week_summary_tv_wt_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_marginLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Kg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End of Week Weight : "
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/week_summary_tv_wt_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_marginLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Kg"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/week_summary_image"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/dash"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:id="@+id/garbage_scroll"
        android:layout_below="@+id/garbage_card_over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <fragment
            android:id="@+id/week_summary_daily_frag"
            android:name="com.example.ahuja.dietanalyzer.Adapters_Fragments.DailySummFrag"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </ScrollView>


</RelativeLayout>